paths:
  /clients:
    get:
      tags:
        - clients
      summary: liste des clients.
      responses:
        '200':
          description: Success.
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: '#/components/schemas/Customer'
           
  '/client/{clientId}':
    get:
      tags:
        - clients
      summary: Affciher les d√©tails d'un client.
      parameters:
        - name: clientId
          in: path
          description: L'ID du client
          required: true
          schema:
            type: number
      responses:
        '200':
          description: Success.
          content:
            application/json:
              schema:
                type: object
                properties:
                  id:
                    type: number
                  nom:
                    type: string
                  prenom:
                    type: string
                  ventes:
                    $ref: '#/components/schemas/Sale'
              
  '/client':
    post:
      tags:
        - clients
      summary: ajouter un nouveau client.
      parameters:
        - name: nom
          in: query
          required: true
          schema:
            type: string
        - name: prenom
          in: query
          required: true
          schema:
            type: string
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Customer'
        description: The measurement to store.
        required: true
      responses:
        '202':
          description: Accepted
          
  '/vente/{clientId}':
    post:
      tags:
        - ventes
      summary: ajouter un nouvelle vente.
      parameters:
        - name: clientId
          in: path
          required: true
          schema:
              type: number
        - name: montant
          in: query
          required: true
          schema:
              type: number
      requestBody:
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/Customer'
        description: The measurement to store.
        required: true
      responses:
        '202':
          description: Accepted